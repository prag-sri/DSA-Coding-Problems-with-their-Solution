//Maximum Subarray
//LeetCode Link:- https://leetcode.com/problems/maximum-subarray/

class Solution {
    public int maxSubArray(int[] nums) {
        //Using Kadane's Algorithm
        
        int n= nums.length;
        int previousMaxSum= 0;
        int maxSum= Integer.MIN_VALUE;
        for(int i=0; i<n; i++)
        {
            int first_option= nums[i];
            int second_option= nums[i]+previousMaxSum;
            previousMaxSum= Math.max(first_option,second_option);
            maxSum= Math.max(maxSum,previousMaxSum);
        }
        return maxSum;
    }
}
